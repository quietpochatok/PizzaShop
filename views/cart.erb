<table class="table">
  <thead>
    <tr>
      <th scope="col">Пицца</th>
      <th scope="col">Стоимость</th>
      <th scope="col">Количество</th>
    </tr>
  </thead>
  <tbody>
   <% total_price = 0 %>
   <% total_qty = 0 %>
   <% @items.each do |item|%>
    <tr>
      <td><%= item[0].title%></td>
      <td><%= item[0].price%></td>
      <td><%= item[1]%></td>
    </tr>
      <% total_price += item[1].to_i * item[0].price %>
      <% total_qty += item[1].to_i %>
    <% end -%>
    <tr>
      <td></td>
      <td><%= total_price %></td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>