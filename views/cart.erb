<table class="table">
  <thead>
    <tr>
      <th scope="col">Пицца</th>
      <th scope="col">Стоимость</th>
      <th scope="col">Количество</th>
    </tr>
  </thead>
  <tbody>
   <% total_price = 0 %>
   <% total_qty = 0 %>
   <% @items.each do |item|%>
    <tr>
      <td><%= item[0].title%></td>
      <td><%= item[0].price%> руб.</td>
      <td><%= item[1]%></td>
    </tr>
      <% total_price += item[1].to_i * item[0].price %>
      <% total_qty += item[1].to_i %>
    <% end -%>
    <tr>
      <td></td>
      <td><%= total_price %></td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>

<form action="/place_order" method="POST" role="form">

  <input type="hidden" name="order[orders_input]" value="<%= @orders_input %>"/>
   <div class="form-group">
    <label for="exampleInputName">Ваше имя и фамилия</label>
    <input name="order[name]" type="text" class="form-control" id="exampleInputName" placeholder="Введите ваше имя и фамилия">
    </div>
    <div class="form-group">
    <label for="exampleInputNumber">Ваш номер телефона</label>
    <input name="order[phone]" type="text" class="form-control" id="exampleInputNumber" placeholder="Введите ваш номер телефона">
  </div>
  <div class="form-group">
    <label for="exampleInputAddress">Введите ваш адрес</label>
    <textarea name="order[address]" type="text" class="form-control" id="exampleInputAddress" placeholder="Введите ваш адрес"></textarea> 
  </div>
  <button type="submit" class="btn btn-success btn-lg">Send order(Отправить заказ)</button>
</form>
